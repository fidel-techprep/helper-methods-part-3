<div class="container mt-3">
  <h1>
    List of all movies
  </h1>
  
  <hr>
  
  <div>
    <%= link_to "Add a new movie", new_movie_path %>
  </div>
  
  <div class="row">
  
    <% @movies.each do |movie| %>
      <div class="col-md-3">
  
        <%= render movie %>
  
      </div>
    <% end %>
  
  </div>
</div>
